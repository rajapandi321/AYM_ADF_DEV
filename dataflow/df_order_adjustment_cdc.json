{
	"name": "df_order_adjustment_cdc",
	"properties": {
		"folder": {
			"name": "Order CDC"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Intermiadate_Result",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "LS_V2_ORDER_DB_STAGE",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "alterRow1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          order_id as integer,",
				"          created_at as timestamp,",
				"          updated_at as timestamp,",
				"          source_id as integer,",
				"          adjustable_id as integer,",
				"          adjustable_reason_id as integer,",
				"          amount as decimal(38,18),",
				"          promotion_code_id as integer,",
				"          eligible as boolean,",
				"          included as boolean,",
				"          finalized as boolean,",
				"          free_sample as boolean,",
				"          source_type as string,",
				"          label as string,",
				"          adjustable_type as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> source1",
				"source1 alterRow(upsertIf(true())) ~> alterRow1",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          id as integer,",
				"          order_id as integer,",
				"          source_type as string,",
				"          source_id as integer,",
				"          adjustable_type as string,",
				"          adjustable_id as integer,",
				"          adjustable_reason_id as integer,",
				"          amount as double,",
				"          label as string,",
				"          promotion_code_id as integer,",
				"          eligible as boolean,",
				"          included as boolean,",
				"          finalized as boolean,",
				"          free_sample as boolean,",
				"          created_at as timestamp,",
				"          updated_at as timestamp,",
				"          deleted_at as timestamp",
				"     ),",
				"     format: 'table',",
				"     tableName: 'order_adjustment',",
				"     schemaName: 'public',",
				"     deletable: false,",
				"     insertable: false,",
				"     updateable: false,",
				"     upsertable: true,",
				"     keys:['id'],",
				"     store: 'postgres',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          id,",
				"          order_id,",
				"          source_type,",
				"          source_id,",
				"          adjustable_type,",
				"          adjustable_id,",
				"          adjustable_reason_id,",
				"          amount,",
				"          label,",
				"          promotion_code_id,",
				"          eligible,",
				"          included,",
				"          finalized,",
				"          free_sample,",
				"          created_at,",
				"          updated_at",
				"     )) ~> sink1"
			]
		}
	}
}