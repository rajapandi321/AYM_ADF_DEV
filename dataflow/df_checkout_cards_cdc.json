{
	"name": "df_checkout_cards_cdc",
	"properties": {
		"folder": {
			"name": "User_CDC"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Intermiadate_Result",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "LS_V2_USER_DB_PRODUCTION_SERVER",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "alterRow1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          user_id as integer,",
				"          name_on_card as string,",
				"          scheme as string,",
				"          scheme_local as string,",
				"          instrument_id as string,",
				"          last_digits as string,",
				"          month as string,",
				"          year as string,",
				"          updated_at as timestamp,",
				"          created_at as timestamp,",
				"          card_type as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> source1",
				"source1 alterRow(upsertIf(true())) ~> alterRow1",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          id as integer,",
				"          instrument_id as string,",
				"          card_type as string,",
				"          expiry_month as integer,",
				"          expiry_year as integer,",
				"          scheme as string,",
				"          user_id as integer,",
				"          created_at as timestamp,",
				"          updated_at as timestamp,",
				"          deleted_at as timestamp,",
				"          last_digits as string,",
				"          name_on_card as string,",
				"          scheme_local as string,",
				"          bin as string",
				"     ),",
				"     format: 'table',",
				"     tableName: 'checkout_cards',",
				"     schemaName: 'public',",
				"     deletable: false,",
				"     insertable: false,",
				"     updateable: false,",
				"     upsertable: true,",
				"     keys:['id','user_id'],",
				"     store: 'postgres',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          id,",
				"          instrument_id,",
				"          card_type,",
				"          expiry_month = month,",
				"          expiry_year = year,",
				"          scheme,",
				"          user_id,",
				"          created_at,",
				"          updated_at,",
				"          last_digits,",
				"          name_on_card,",
				"          scheme_local",
				"     )) ~> sink1"
			]
		}
	}
}