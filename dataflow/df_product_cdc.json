					},
					"name": "brand"
				},
				{
					"linkedService": {
						"referenceName": "LS_V2_STAGE",
						"type": "LinkedServiceReference"
					},
					"name": "supplier"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "LS_V2_STAGE",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "alterRow1"
