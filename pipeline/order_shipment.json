				"typeProperties": {
					"source": {
						"type": "PostgreSqlV2Source",
						"query": "with cte as(\n\tselect  ss.id,\n\t\tso.id as order_id,\n\t\tCASE \n            WHEN ss.state = 'shipped' THEN 'delivered'\n            WHEN ss.state = 'pending' THEN 'pending'\n            WHEN ss.state = 'ready' THEN 'picked'\n            WHEN ss.state = 'canceled' THEN 'cancelled'\n        END AS status,\n        ss.created_at,\n        ss.updated_at,\n        CAST((so.total*(so.vat_percentage/100)) AS DOUBLE PRECISION) AS tax_total,\n        so.total,\n        so.order_type,\n\t\tso.supermarket_id,\n\t\tdsto.time_slots_schedule_id as time_slot_id,\n\t\tsla.delivery_date,\n        sa.amount AS delivery_charges,\n        FALSE AS is_delivery_on_hold,\n        CURRENT_TIMESTAMP AS processing_start_at,\n\t\tROW_NUMBER() OVER (PARTITION BY ss.id ORDER BY ss.id) AS rn\n\t\nfrom spree_orders so\nINNER JOIN spree_shipments ss on ss.order_id = so.id\nLEFT JOIN danube_slot_to_orders dsto on dsto.order_id = so.id\nLEFT JOIN spree_lift_assignments sla ON sla.order_id = so.id\nLEFT JOIN spree_adjustments sa ON sa.order_id = so.id AND sa.label = 'Express Fee'\nwhere so.state != 'cart')\nSELECT \n    id,\n    order_id,\n    status,\n    created_at,\n    updated_at,\n    tax_total,\n    total,\n    order_type,\n    time_slot_id,\n    supermarket_id,\n    delivery_date,\n    delivery_charges,\n    is_delivery_on_hold,\n    processing_start_at\nFROM cte\nwhere rn = 1;"
					},
